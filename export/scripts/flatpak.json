{
  "app-id": "com.helium3d.Helium3D",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "Helium3D",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=pulseaudio",
    "--device=dri",
    "--share=network"
  ],
  "modules": [
    {
      "name": "helium3d",
      "buildsystem": "simple",
      "build-commands": [
        "install -D Helium3D.bin /app/bin/Helium3D.bin",
        "install -D Helium3D.pck /app/bin/Helium3D.pck",
        "cp -r formulas /app/bin/",
        "install -D helium3d.desktop /app/share/applications/com.helium3d.Helium3D.desktop"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../godot-export/linux"
        }
      ]
    }
  ]
}
