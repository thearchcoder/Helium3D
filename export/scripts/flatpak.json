{
  "app-id": "com.helium3d.Helium3D",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "Helium3D",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--device=dri",
    "--share=network"
  ],
  "modules": [
    {
      "name": "helium3d",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 Helium3D.x86_64 /app/bin/Helium3D",
        "install -Dm644 Helium3D.pck /app/share/helium3d/Helium3D.pck",
        "cp -r formulas /app/share/helium3d/",
        "cp -r data_Helium3D_linuxbsd_x86_64 /app/share/helium3d/",
        "install -Dm644 icon.png /app/share/icons/hicolor/256x256/apps/com.helium3d.Helium3D.png",
        "install -Dm644 app.desktop /app/share/applications/com.helium3d.Helium3D.desktop"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../../"
        }
      ]
    }
  ]
}
